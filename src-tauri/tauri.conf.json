{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "betterx-desktop",
  "version": "0.1.0",
  "identifier": "com.betterx-desktop.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "BetterX Twitter",
        "width": 1300,
        "height": 690,
        "url": "https://twitter.com"
      }
    ],
    "security": {
      "csp": "default-src 'self' https://*.twitter.com https://*.x.com; connect-src 'self' https://*.twitter.com https://*.x.com http://ipc.localhost:*; script-src 'self' 'unsafe-inline' https://*.twitter.com https://*.x.com; style-src 'self' 'unsafe-inline' https://*.twitter.com https://*.x.com;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "bundle.js"
    ]
  }
}